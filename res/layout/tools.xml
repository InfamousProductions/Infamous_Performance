<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

    <PreferenceCategory
            android:key="category_sh"
            android:title="@string/prefcat_sh">
    <Preference
                android:key="pref_sh"
                android:summary="@string/ps_sh"
                android:title="@string/sh_title"/>

    </PreferenceCategory>
    <PreferenceCategory
            android:key="category_wipe_cache"
            android:title="@string/prefcat_wipe_cache">
        <Preference
                android:key="pref_wipe_cache"
                android:title="@string/wipe_cache_title"/>

    </PreferenceCategory>
    <PreferenceCategory
            android:key="category_flash_img"
            android:title="@string/prefcat_flash_img">
        <Preference
                android:key="pref_kernel_img"
                android:title="@string/kernel_img_title"/>
        <Preference
                android:key="pref_recovery_img"
                android:title="@string/recovery_img_title"/>

    </PreferenceCategory>
    <PreferenceCategory
            android:key="category_residual_files"
            android:title="@string/prefcat_residual_files">
        <Preference
                android:key="pref_residual_files"
                android:title="@string/residual_files_title"/>

    </PreferenceCategory>
</PreferenceScreen>
